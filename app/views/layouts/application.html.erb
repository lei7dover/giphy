<!DOCTYPE html>
<html>
<head>
  <title>Giphy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="row navbar">
    <div class= 'col-xs-6 col-xs-offset-1'>
      <button type="button" class="btn btn-primary btn-lg gif_button" data-toggle="modal" data-target="#new_giphy">New Giphy</button>
    </div>
  <div class= "col-xs-4 signin">
    <% unless @current_user %>
      <h6> Welcome, <%= @current_user %></h6>
        <button type="button" class="btn btn-primary btn-lg sign_up_button" data-toggle="modal" data-target="#new_user">Create an Account</button>
        <button type="button" class="btn btn-primary btn-lg sign_in_button" data-toggle="modal" data-target="#sign_in">Sign In</button>
      <% else %>
      <%= link_to "Log Out", user_session_path(@current_user),method: :delete, :class => "btn btn-medium btn-primary" %>
      <% end %>
  </div>
</div>
<%= yield %>

</body>
</html>
